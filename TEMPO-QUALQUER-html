        var saudaçao;
        var hora = new Date().getHours();

        if(hora < 9) {
            saudaçao = "Hora do café da manha"
        } else if (hora < 13) {
            saudaçao = "Hora do Almoço" 
        } else if (hora < 18) {
            saudaçao = "Hora do Café da Tarde"
        } else if (hora < 0) {
            saudaçao = "Hora da Jantar"
        }
        document.getElementById("saudaçao4").innerHTML = saudaçao;

     </script>


